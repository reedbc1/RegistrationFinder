[[workflows.workflow]]
name = "poetry"
mode = "sequential"
author = 170199

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "poetry export -f requirements.txt --output requirements.txt --without-hashes"

[[ports]]
localPort = 5000
externalPort = 80
